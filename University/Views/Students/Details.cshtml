@{
  Layout = "_Layout";
}

@model University.Models.Student

<h2>Category Details</h2>
<hr />
<h3>@Html.DisplayNameFor(model => model.Name): @Html.DisplayFor(model => model.Name)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This student does not contain any course</p>
}
else
{
  <h4>Courses the student contains:</h4>
  <ul>
  @foreach(var join in Model.JoinEntities)
  {
    <li>@join.Course.Name</li>
  }
  </ul>
}

<p>@Html.ActionLink("Back to categories", "Index")</p>
<p>@Html.ActionLink("Edit Category", "Edit", new { id = Model.StudentId })</p>
<p>@Html.ActionLink("Delete Category", "Delete", new { id = Model.StudentId })</p>